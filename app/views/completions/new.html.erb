<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <!-- Titre avec style moderne -->
      <h1 class="text-center mb-4">Coucou</h1>
      <div class="shadow-lg p-4">
        <%= simple_form_for [@plant, @completion] do |f| %>
            <%= f.association :chore, label: "What did you do?", input_html: { class: 'form-control' } %>
            <div class="text-center">
              <%= f.submit "Complete", class: 'btn btn-primary px-4 py-2 rounded-pill' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
